<div class="col-sm-8 blog-main">
  <h2> <%= @blog.title %></h2>
  <p>
    <%= @blog.body %> <br>
    <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin)%> /
     <%= link_to 'Delete', blog_path(@blog), method: :delete,  data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
  </p>

  <!-- start of comment form -->
  <% unless logged_in? %>
  <%# form_with(model: blog, local: true) %>
  <%= form_with model: @comment, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control'%>
    </div>

    <%= f.submit 'Post Comment', class: 'btn btn-primary'%>
  <% end %>
  <%end %>
    <!-- end of comment form -->

    <%= render @blog.comments %>

</div>

 
